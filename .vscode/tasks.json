{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Flutter integration tests",
            "type": "shell",
            "command": "flutter drive --driver test_driver/driver.dart --target integration_test/app_test.dart",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Flutter integration tests - web",
            "type": "shell",
            "command": "chromedriver --port=4444 &; flutter drive --driver test_driver/driver.dart --target integration_test/app_test.dart --browser-name=chrome -d web-server",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}